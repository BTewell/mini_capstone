<h1>Please edit the selected product here.</h1>

<form action="/products/<%= @product.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <p>name: <input type="text" name="name" value="<%= @product.name %>"></p>
  <p>description:<input type="text" name="description" value="<%= @product.description %>"><p>
  <p>price: <input type="text" name="price" value="<%=@product.price %>"><p>
  <!-- <p>supplier_id: <input type="text" name="supplier_id" value="<%= @product.supplier_id %>"><p> -->
  <p><select name="supplier_id">
    <% @suppliers.each do |supplier| %>
      <option value="<%= supplier.id %>"><%= supplier.name %></option>
    <% end %>
  </select></p>
  
  <p><input type="submit" name="Edit Product"></p>  
</form>
